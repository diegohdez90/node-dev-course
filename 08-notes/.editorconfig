# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
tab_width = 2
trim_trailing_whitespace = true

[*.json]
indent_size = 2
indent_style = tab
trim_trailing_whitespace = false

[*.py]
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = false

[package.json]
indent_size = 2
indent_style = space

[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false
insert_final_newline = true
end_of_line = lf

[*.js, *.ts]
indent_size = 2
indent_style = tab
trim_trailing_whitespace = false
insert_final_newline = true
end_of_line = lf